<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ContactFragment">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin liên hệ"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Appfoods là ứng dụng - Website thương mại điện tử ND Fresh do ND Group là đơn vị chủ quản, chịu trách nhiệm và thực hiện các giao dịch liên quan mua sắm sản phẩm hàng hoá tiêu dùng thiết yếu."
            android:textSize="18sp"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer_address"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điện thoại: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/idCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19008523"
                android:textSize="18sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/idEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="toongteam@gmail.com"
                android:textSize="18sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="8dp"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:height="220dp"
            android:background="@drawable/edit_text_design"
            android:hint="Nhập họ và tên"
            android:padding="8dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/contact_phone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:height="220dp"
            android:inputType="phone"
            android:background="@drawable/edit_text_design"
            android:hint="Nhập số điện thoại"
            android:padding="8dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/contact_email"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:height="220dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_design"
            android:hint="Nhập email"
            android:padding="8dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nội dung"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/contact_comment"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edit_text_design"
            android:gravity="top"
            android:padding="8dp"
            android:hint="Nội dung liên hệ" />

        <Button
            android:id="@+id/contact_btn_send"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:text="Send"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/edit_text_design"/>

        <include layout="@layout/footer"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

