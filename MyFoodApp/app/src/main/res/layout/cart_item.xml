<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cart_img"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:src="@drawable/sale_1" />


        <LinearLayout
            android:layout_width="324dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cart_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ổi lê ruột đỏ"
                android:textAlignment="center"
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cart_price"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="20.000đ"
                android:textAlignment="center"
                android:textColor="#eb3e32"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Số lượng: "
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/cart_sub"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/ic_baseline_remove_circle_outline_24" />

                <TextView
                    android:id="@+id/cart_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="1"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/cart_add"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/ic_baseline_add_circle_outline_24" />

                <TextView
                    android:id="@+id/cart_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#eb3e32"
                    android:gravity="center|right"
                    android:text="Xóa sản phẩm" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>